{
  "name": "tuxedo-control-center",
  "version": "0.0.1",
  "main": "./dist/tuxedo-control-center/e-app/main.js",
  "author": {
    "name": "TUXEDO Computers GmbH",
    "email": "tux@tuxedocomputers.com",
    "url": "https://tuxedocomputers.com"
  },
  "homepage": "https://tuxedocomputers.com",
  "scripts": {
    "start": "electron ./dist/tuxedo-control-center",
    "build": "npm run clean && tsc -p ./src/e-app && npm run build-service && ng build && npm run copy-files",
    "build-prod": "npm run clean && tsc -p ./src/e-app && npm run build-service && ng build --prod && npm run copy-files",
    "build-service": "tsc -p ./src/service-app && npm run bundle-service",
    "bundle-service": "pkg --target node12-linux-x64 --output ./dist/tuxedo-control-center/data/service/tccd ./dist/tuxedo-control-center/service-app/service-app/main.js",
    "copy-files": "npm run copy-package-json && npm run copy-dist-files",
    "copy-package-json": "cp ./src/package.json ./dist/tuxedo-control-center/package.json",
    "copy-dist-files": "cp -r ./src/dist-data ./dist/tuxedo-control-center/data",
    "pack": "npm run build && ts-node ./build-src/electron-builder.ts all",
    "pack-prod": "npm run build-prod && ts-node ./build-src/electron-builder.ts all",
    "clean": "rm -rf ./dist",
    "tests": "npm run test-common && npm run test-ng && npm run test-ng-e2e",
    "test-common": "ts-node node_modules/jasmine/bin/jasmine --config=./src/common/jasmine.json",
    "test-ng": "ng test --watch=false",
    "test-ng-e2e": "ng e2e",
    "install-build-dep": "curl -sL https://deb.nodesource.com/setup_11.x | sudo -E bash - && sudo apt install nodejs autoconf automake build-essential gcc g++ make rpm"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~8.0.1",
    "@angular/common": "~8.0.1",
    "@angular/compiler": "~8.0.1",
    "@angular/core": "~8.0.1",
    "@angular/forms": "~8.0.1",
    "@angular/platform-browser": "~8.0.1",
    "@angular/platform-browser-dynamic": "~8.0.1",
    "@angular/router": "~8.0.1",
    "rxjs": "~6.4.0",
    "tslib": "^1.9.0",
    "zone.js": "~0.9.1"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.800.0",
    "@angular/cli": "~8.0.4",
    "@angular/compiler-cli": "~8.0.1",
    "@angular/language-service": "~8.0.1",
    "@ng-bootstrap/ng-bootstrap": "^5.0.0-rc.1",
    "@types/jasmine": "^3.3.13",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "^12.0.0",
    "codelyzer": "^5.0.0",
    "electron": "^5.0.6",
    "electron-builder": "^20.44.4",
    "jasmine": "^3.4.0",
    "jasmine-core": "~3.4.0",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~4.1.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~2.0.1",
    "karma-jasmine": "~2.0.1",
    "karma-jasmine-html-reporter": "^1.4.0",
    "mock-fs": "^4.10.1",
    "ngx-electron": "^2.1.1",
    "pkg": "^4.4.0",
    "protractor": "~5.4.0",
    "ts-node": "^7.0.1",
    "tslint": "~5.15.0",
    "typescript": "~3.4.3"
  }
}
